.atl-avatar-wrap(style="display: inline-block;")
	if avatar
		img.atl-avatar.avatar(src="#{avatar}")
	else
		img.atl-avatar.avatar(src="/landing/images/katyayani/png/brown-man-icon.png", style="display: inline-block;")
.atl-user-meta(style="display:inline-block")
	.atl-user-meta-header
		div.atl-username
			span.atl-username #{displayName} (Me)
		time.atl-join-time #{time}
	.atl-user-meta-others
		span.atl-useremail #{nickname}
		span.atl-authvia via: #{authvia}
