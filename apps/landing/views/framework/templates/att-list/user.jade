li.atl-list-item.list-group-item(id=att_id)
	.atl-avatar-wrap
		if avatar
			img.atl-avatar.avatar(src="#{avatar}", style="display: inline-block;")
		else if initials
			div #{initials}
		else
			include images/user.svg
	.atl-user-meta(style="display:inline-block")
		.atl-user-meta-header
			div.atl-username
				span.atl-username.displayName #{displayName}
			time.atl-join-time #{time}
		.atl-user-meta-others
			span.atl-useremail.email #{nickname}
			span.atl-authvia.authvia via: #{authvia}
		include controlbar
